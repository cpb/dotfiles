[user]
	name = <%= print("Your full name: "); STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>

[github]
	user = <%= print("Github user: "); STDOUT.flush; STDIN.gets.chomp %>
	token = <%= print("Your github token: "); STDOUT.flush; STDIN.gets.chomp %>

[alias]
	ci = commit -a
	co = checkout
	st = status -sb
	hist = log --pretty=format:\"%h | %ad | %s %Cgreen[%an]%Creset%Cred%d%Creset\" --graph --date=short
	wd = diff --word-diff
	d = diff
	dc = diff --cached

[color]
	branch = auto
	diff = auto
	status = auto
	ui = auto
	grep = auto
	interactive = auto
	pager = true

[core]
	editor = vim
	pager = most
	excludesfile = ~/.gitignore

[push]
	default = current

[branch]
	autosetuprebase = always

[diff]
  tool = meld
[difftool]
  prompt = false
[difftool "meld"]
  trustExitCode = true
  cmd = open -W -a Meld --args \"$PWD/$LOCAL\" \"$PWD/$REMOTE\"
[merge]
  tool = meld
[mergetool]
  prompt = false
[mergetool "meld"]
  trustExitCode = true
  cmd = open -W -a Meld --args --auto-merge \"$PWD/$LOCAL\" \"$PWD/$BASE\" \"$PWD/$REMOTE\" --output=\"$PWD/$MERGED\"
